apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata: 
  name: apache-hpa
spec: 
  scaleTargetRef:
      apiVersion: apps/v1
      kind: Deployment
      name: php-deployment
  minReplicas: 1
  maxReplicas: 5
  metrics: 
   - type: Resource
     resources: 
      name: cpu
      target: 
        type: Utilization
        averageUtilization: 50